<div class="sapphire-auth">
    <form lex layout-fill class="well form-signin" method="post" id="login_form" style="text-align: initial;">
	<h2>Login</h2>
	<hr>

	<div layout="column">

	    <md-input-container flex>
	      <label>Username</label>
	      <input id="username" type="text" name="username" placeholder="Enter your username">
	    </md-input-container>

	    <md-input-container flex>
	      <label>Password</label>
	      <input id="userpass" type="password" name="userpass" placeholder="Enter your password">
	    </md-input-container>

	</div>

	<div style="text-align: center;">
        <button class="btn btn-primary" type="submit" name="submit">Sign in</button><br>
	<br>
	<a href="/user/register">Are you new user?</a>
	</div>

    </form>
</div>
<script src="/js/user/login.js"></script>
